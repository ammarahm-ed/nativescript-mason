    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Test"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Left"
        mason:mason_positionType="absolute"
        mason:mason_positionTop="0dp"
        mason:mason_positionLeft="0dp"
        android:background="@color/blue"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Right"
        mason:mason_positionType="absolute"
        mason:mason_positionRight="0dp"
        mason:mason_positionTop="0dp"
        android:background="@color/blue"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottom Left"
        mason:mason_positionType="absolute"
        mason:mason_positionLeft="0dp"
        mason:mason_positionBottom="0dp"
        android:background="@color/blue"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottom Right"
        mason:mason_positionType="absolute"
        mason:mason_positionRight="0dp"
        mason:mason_positionBottom="0dp"
        android:background="@color/blue"
        android:textColor="@color/white"
        />

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/recyclerView"
           android:layout_width="match_parent"
           android:layout_height="300dp"
           android:orientation="horizontal" />
   </LinearLayout>

    <org.nativescript.mason.masonkit.View
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nested TextView in mason" />

    </org.nativescript.mason.masonkit.View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:text="Hello this"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:text=" is the new" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:text=" layout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:text=" powered by taffy"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <org.nativescript.mason.masonkit.View
            android:id="@+id/llc"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <org.nativescript.mason.masonkit.View
                android:id="@+id/llgc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello World Nested" />
            </org.nativescript.mason.masonkit.View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thing"
                mason:mason_marginLeft="10dp" />

        </org.nativescript.mason.masonkit.View>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</org.nativescript.mason.masonkit.View>